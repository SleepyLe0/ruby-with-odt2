<h1>Articles</h1>
<%= link_to "New Article", new_article_path %>
<ul>
  <% @articles.each do |article| %>
    <h1><%= article.title %></h1>
    <p><%= article.body %></p>
    <ul>
      <li><%= link_to "Edit", edit_article_path(article) %></li>
      <li><%= link_to "Destroy", article_path(article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
    </ul>
  <% end %>
</ul>
